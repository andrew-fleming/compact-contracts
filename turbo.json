{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "compact": {
      "dependsOn": ["^build"],
      "env": ["COMPACT_HOME"],
      "inputs": ["contracts/src/**/*.compact"],
      "outputLogs": "new-only",
      "outputs": ["src/artifacts/**", "src/gen/**", "gen/**"]
    },
    "test": {
      "dependsOn": ["^build", "compact"],
      "outputs": [],
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["COMPACT_HOME"],
      "inputs": [
        "src/**/*.ts",
        "!src/**/*.test.ts",
        "!tests/**/*.ts",
        "tsconfig.json",
        "tsconfig.build.json",
        ".env"
      ],
      "outputs": ["dist/**"]
    },
    "types": {
      "dependsOn": ["compact"],
      "outputs": [],
      "cache": false
    },
    "//#fmt-and-lint": {},
    "//#fmt-and-lint:ci": {},
    "//#fmt-and-lint:fix": {
      "cache": false
    },
    "clean": {
      "outputs": [],
      "cache": false
    },
    "docs": {
      "outputs": [],
      "cache": false
    },
    "docs:watch": {
      "outputs": [],
      "cache": false
    }
  }
}
