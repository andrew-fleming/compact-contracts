{
  "extends": "@tsconfig/node24/tsconfig.json",
  "include": [
    "src/**/witnesses/**/*.ts"
  ],
  "exclude": ["src/archive/"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
  }
}